<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.AppBarOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingHorizontal="32dp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Đăng nhập"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/etLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tvLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/et"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etLoginEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/et"
        android:hint="Mật khẩu"
        android:inputType="textWebPassword"
        android:padding="15dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoginPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_login_button"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_register_button"
        android:text="Đăng ký"
        android:textAllCaps="false"
        android:textColor="@color/swipe_color_1"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRegister"
        android:layout_marginStart="90dp"
        android:layout_marginTop="@dimen/dp_30"
        app:cardCornerRadius="@dimen/dp_100"
        app:contentPadding="12dp">

        <ImageView
            android:id="@+id/btnGoogleLoginPage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/google" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/card_google"
        android:layout_alignBottom="@id/card_google"
        android:layout_toStartOf="@id/card_facebook"
        android:layout_toEndOf="@id/card_google"
        android:gravity="center"
        android:text="or"
        android:textAlignment="center" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRegister"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="90dp"
        app:cardCornerRadius="@dimen/dp_100"
        app:contentPadding="12dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/facebook" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>