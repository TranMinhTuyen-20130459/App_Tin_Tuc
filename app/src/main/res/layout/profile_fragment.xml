<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/cover_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cover_image_item"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo_main"
            android:scaleType="fitXY" />


        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/circle_gray"
            android:layout_gravity="bottom|end"/>
        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/photo_camera"
            android:padding="8dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_image"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        >

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <FrameLayout
                android:id="@+id/profile_image_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/btn_user"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="2dp" />
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/circle_gray"
                    android:layout_gravity="bottom|end"/>
                <ImageView
                    android:id="@+id/camera_icon_avata"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/photo_camera"
                    android:padding="8dp" />
            </FrameLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et"
                android:backgroundTint="@color/colorPrimaryDark"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Đăng nhập ngay"
                android:textColor="@color/white"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dp_20"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_name"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "></TextView>

            <TextView
                android:id="@+id/if_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên: "></TextView>

            <TextView
                android:id="@+id/if_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/info_user"
            android:background="@drawable/line" />

        <Button
            android:id="@+id/btn_viewed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_user"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/et"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/library_books"
            android:paddingStart="@dimen/dp_30"
            android:text="@string/tin_da_xem"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textAllCaps="false"
             android:drawablePadding="@dimen/dp_20"/>

        <Button
            android:id="@+id/fllower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_viewed"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/et"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/group_add"
            android:paddingStart="@dimen/dp_30"
            android:text="Theo dõi"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textAllCaps="false"
             android:drawablePadding="@dimen/dp_20"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fllower"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/et"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/logout_icon_sm"
            android:paddingStart="@dimen/dp_30"
            android:text="Đăng xuất"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textAllCaps="false"
             android:drawablePadding="@dimen/dp_20"/>
    </LinearLayout>
</RelativeLayout>